@model IEnumerable<DTO.TestDTO>

@{
    ViewBag.Title = "Test List";
}

<h2>@ViewBag.Title</h2>

@if (TempData["ErrorMessage"] != null)
{
        <div class="alert alert-danger">
        @TempData["ErrorMessage"]
        </div>
}

<a asp-action="Test" class="btn btn-success mb-3">Add New Test</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Created Date</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                        <td>
                        @if (item.IsActive)
                        {
                                    <span class="text-success">Yes</span>
                        }
                        else
                        {
                                    <span class="text-danger">No</span>
                        }
                        </td>
                        <td>
                            <a asp-action="Test" asp-route-id="@item.ID" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="DeleteTest" asp-route-id="@item.ID" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this test?');">Delete</a>
                        </td>
                    </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No tests found.</td>
            </tr>
        }
    </tbody>
</table>
